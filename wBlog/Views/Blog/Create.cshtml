@model wBlog.Models.BlogInputModel

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Blog"))
{

        @Html.TextBoxFor(p => p.Title)
    <br/>
    <br/>
        @Html.TextBoxFor(p => p.Body, new { @class = "form-control" })
    <br/>
    <br/>
        @Html.TextBoxFor(p => p.Tags, new { size = "30" })
        <input type="submit" value="Create Post" />


}
